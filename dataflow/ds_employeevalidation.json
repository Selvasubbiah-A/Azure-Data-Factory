{
	"name": "ds_employeevalidation",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_employeevalidation",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_employeetesting",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"parameters{",
				"     Validdate as string",
				"}",
				"source(output(",
				"          EmployeeID as integer,",
				"          EmployeeName as string,",
				"          Salary as decimal(10,2),",
				"          JoiningDate as date",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: ('SELECT * FROM Employee WHERE JoiningDate > CONVERT(DATE, CONVERT(VARCHAR(255), '+$Validdate+') )'),",
				"     format: 'query') ~> source1",
				"source1 derive(SalaryRate = iif(Salary > 60000, 'High Salary', iif(Salary > 55000,'Intermediate','Low Salary'))) ~> derivedColumn1",
				"derivedColumn1 select(mapColumn(",
				"          EmployeeID,",
				"          EmployeeName,",
				"          Salary,",
				"          SalaryRate,",
				"          JoiningDate",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          EmployeeID as integer,",
				"          EmployeeName as string,",
				"          Salary as decimal(10,2),",
				"          SalaryRate as string,",
				"          JoiningDate as date",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> sink1"
			]
		}
	}
}