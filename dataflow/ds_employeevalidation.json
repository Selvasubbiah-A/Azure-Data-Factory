{
	"name": "ds_employeevalidation",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_employeevalidation",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "destemployeefile",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"parameters{",
				"     Validdate as string",
				"}",
				"source(output(",
				"          EmployeeID as integer,",
				"          EmployeeName as string,",
				"          Salary as decimal(10,2),",
				"          JoiningDate as date",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: ('SELECT * FROM Employee WHERE JoiningDate > CONVERT(DATE,'+$Validdate+' )'),",
				"     format: 'query') ~> source1",
				"source1 derive(SalaryRate = iif(Salary > 60000, 'High Salary', iif(Salary > 55000,'Intermediate','Low Salary'))) ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}